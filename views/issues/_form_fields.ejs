<!-- form fields for issues creation -->
<div class="form-row">
  <div class="form-item">
    <label>Title</label>
    <input type="text" name="title" value="<%= issue.title %>">
  </div>

  <div class="form-item">
    <label>Street</label>
    <select name="street">
  <% streets.forEach(street => { %>
    <% if (street.id === issue.street) { %>
      <option selected label="<%= street.addressName %>" value="<%= street.id %>">
    <% } else { %>
      <option label="<%= street.addressName %>" value="<%= street.id %>">
    <% } %>
  <% }) %>
  </select>
</div>
</div>

<div class="form-row">
  <div class="form-item form-item-no-grow">
    <label>File</label>
    <input type="file" name="fileup" class="ehr-cover filepond" >
  </div>

  <div class="form-item">
    <label>Description</label>
    <textarea name="description"><%= issue.description %></textarea>
  </div>

</div>